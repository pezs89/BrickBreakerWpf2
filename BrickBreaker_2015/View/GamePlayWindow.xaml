<Window x:Class="BrickBreaker_2015.View.GamePlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrickBreaker_2015.View"
        mc:Ignorable="d"
        Title="GamePlayWindow" Height="475" Width="650" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Concrete_wall.jpg"></ImageBrush>
    </Window.Background>
    <Canvas x:Name="canvas">
        <Ellipse Fill="#FFF4F4F5" Height="{Binding BallList[0].Area.Height}" Canvas.Left="{Binding BallList[0].Area.X}" Stroke="Black" Canvas.Top="{Binding BallList[0].Area.Y}" Width="{Binding BallList[0].Area.Width}"/>
        <Rectangle></Rectangle>
    </Canvas>
</Window>
